generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // url = env("DATABASE_URL")
}

// Enums for user roles and course statuses
// Why Enum? Because they provide a fixed set of values, ensuring data integrity and consistency
enum UserRole {
  USER
  ADMIN
}

enum CourseStatus {
  IN_PROGRESS
  COMPLETED
}

model User {
  id           Int     @id @default(autoincrement())
  clerkId      String  @unique
  email        String  @unique
  username     String
  address      String?
  phoneNumber  String?
  profileImage String?

  role UserRole @default(USER)

  enrollments UserCourse[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  imageUuid   String
  category    String?

  startDate DateTime?
  endDate   DateTime?

  // Why not use float?
  // Because floats can introduce rounding errors in financial calculations.
  // Therefore we use Decimal for precise representation of monetary values.

  // Btw 10 means total digits, 2 means digits after decimal point
  price Decimal @db.Decimal(10, 2)
  // reviews     Int      @default(0)

  enrollments UserCourse[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserCourse {
  id           Int          @id @default(autoincrement())
  userId       Int
  courseId     Int
  courseStatus CourseStatus @default(IN_PROGRESS)

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])

  createdAt DateTime @default(now())

  // Ensure a user can enroll in a course only once
  @@unique([userId, courseId])
}
